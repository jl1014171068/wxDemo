/* pages/shopList/shopList.wxss */

.goods .goods-content{
  display:flex;
}
.goods .goods-content .goods-left .goods-left-title.active{
  color:#ea5503;
  background: #fff;
}
.goods .goods-content .goods-left .goods-left-title.active:after{
  content:'';
  height:94%;
  width: 4rpx;
  background: #ea5503;
  position: absolute;
  left:0;
  top:3%;
}
.goods .goods-content .goods-left .goods-left-title{
  color:#666;
  background: #f9f9f9;
  font-size: 24rpx;
  padding:30rpx 20rpx;
  text-align: left;
  border-bottom: #eee solid 1rpx;
  position: relative;
}
.goods .goods-content .goods-left{
  width:168rpx;
  box-sizing:border-box;
   background-color:#f9f9f9; 
}
.goods .goods-content .goods-right{
  flex: 1;
}
.goods .goods-content .goods-right .goods-right-section .goods-right-title{
  font-size: 20rpx;
  color:#999;
  background: #f3f4f6;
  padding:5rpx 0 5rpx 20rpx;
}
 .goods-right-item{
  padding:25rpx 20rpx 22rpx 14rpx;
border-bottom:1rpx solid #e5e5e5;
display:flex;

}
 .goods-right-item .imgs image{
  width:103rpx;
height:103rpx;
margin-right:29rpx;

}
 .goods-right-item
.goods-right-cont-rg{
  display:flex;
flex-direction:column;
  line-height:38rpx;
flex: 2;
}
 .goods-right-item .goods-right-cont-rg .name{color:#333;
font-size:26rpx;
flex: 1;
}
 .goods-right-item .goods-right-cont-rg .price{font-size:24rpx;
color:#f00;
}
 .goods-right-item .setting{
  display:flex;
  transform:translate(10rpx, 70rpx);
}
 .goods-right-item .setting .text{
    color:#666;
}
 .goods-right-item .setting view{
  width:60rpx;
height:60rpx;
text-align:center;
line-height:60rpx;
font-size:30rpx;
margin-left:5rpx;
}
 .goods-right-item .setting view image{
  width: 100%;
  height:100%;
  border-radius:50%;
}
.goods .goods-footer{
  position:fixed;
  bottom:0;
  width:100%;
  z-index:9999;
  background: #353535;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.goods .goods-footer .goods-cart{
  display: flex;
  align-items: center;
  width: 100%;
  height:100%;
}
.goods .goods-footer .goods-cart .goods-allPrice{
  margin-left: 20rpx;
  color:#fff;
   flex: 2; 
}
.goods .goods-footer .goods-cart .sub{
position:absolute;
 top:5rpx; 
background-color:#f00;
width:30rpx;
text-align:center;
border-radius:50%;
line-height:30rpx;
font-size:18rpx;
right:0;
color:#fff;
}
.goods .goods-footer .goods-cart .icon{
  width:60rpx;
  height:60rpx;
  display: block;
  position: relative;
  padding:10rpx 20rpx;
}
.goods .goods-footer .goods-cart .icon image{
  width: 100%;
  height: 100%;
}
.goods .goods-footer .goods-cart .submit.disabled{
  background: #f9f9f9;
  color:#999;
}
.goods .goods-footer .goods-cart .submit{ 
  width: 300rpx;
  border-radius: 0;
  height: 100%;
  background: #ea5503;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#fff;
  font-size: 26rpx;
}
.goods .goods-cart-list{
  position: fixed;
  bottom: 90rpx;
  left: 0;
  background: #fff;
  max-height: 300rpx;
  z-index: 300;
  width: 100%;
}
.goods .goods-cart-list{}
.goods .goods-cart-list .cart-list-head{
  background: #f0f0f0;
  color: #979797;
  font-size: 26rpx;
  padding: 10rpx;
}
.goods .goods-cart-list .goods-right-cartlist{
  display: flex;
  align-items: center;
  padding: 10rpx;
  border-bottom: #eee solid 1px;
}
.goods .goods-cart-list .goods-right-cartlist .item-left .item-name{
  font-size: 22rpx;
}
.goods .goods-cart-list .goods-right-cartlist .item-left .item-des{
  font-size: 20rpx;
  color:#999;
}
.goods .goods-cart-list .goods-right-cartlist .item-price{
  font-size: 22rpx;
  color:#ea5503;
}
.goods .goods-cart-list .goods-right-cartlist .item-left{
  flex: 4;
}
.goods .goods-cart-list .goods-right-cartlist .item-price{
  width: 100rpx;
}
.goods .goods-cart-list .goods-right-cartlist .setting{
 flex: 1;
 display: flex;
 align-items: center;
}
.goods .goods-cart-list .goods-right-cartlist .setting .text{
    color:#666;
}
.goods .goods-cart-list .goods-right-cartlist .setting view{
width:60rpx;
height:60rpx;
text-align:center;
line-height:60rpx;
font-size:30rpx;
margin-left:5rpx;
}
.goods .goods-cart-list .goods-right-cartlist .setting view image{
  width: 100%;
  height:100%;
  border-radius:50%;
}
